<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/AddFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddFragment">

    <EditText
        android:id="@+id/projTitleEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="New Project Title"
        android:textSize="16pt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/projDescEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="New Project Description"
        app:layout_constraintBottom_toTopOf="@+id/submit_add"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/projTitleEdit"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/projAuthorEdit1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="New Project Author 1"
        app:layout_constraintBottom_toTopOf="@+id/submit_add"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/projDescEdit"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/projAuthorEdit2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="New Project Author 2"
        app:layout_constraintBottom_toTopOf="@+id/submit_add"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/projAuthorEdit1"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/projAuthorEdit3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="New Project Author 3"
        app:layout_constraintBottom_toTopOf="@+id/submit_add"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/projAuthorEdit2"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/projLinkEdit1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="New Project Link 1"
        app:layout_constraintBottom_toTopOf="@+id/submit_add"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/projAuthorEdit3"
        app:layout_constraintVertical_bias="0.0"/>

    <EditText
        android:id="@+id/projLinkEdit2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="New Project Link 2"
        app:layout_constraintBottom_toTopOf="@+id/submit_add"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/projLinkEdit1"
        app:layout_constraintVertical_bias="0.0"/>

    <EditText
        android:id="@+id/projLinkEdit3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="New Project Link 3"
        app:layout_constraintBottom_toTopOf="@+id/submit_add"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/projLinkEdit2"
        app:layout_constraintVertical_bias="0.0"/>

    <EditText
        android:id="@+id/projKeyEdit1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="New Project Keywords 1"
        app:layout_constraintBottom_toTopOf="@+id/submit_add"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/projLinkEdit3"
        app:layout_constraintVertical_bias="0.0"/>

    <EditText
        android:id="@+id/projKeyEdit2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="New Project Keywords 2"
        app:layout_constraintBottom_toTopOf="@+id/submit_add"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/projKeyEdit1"
        app:layout_constraintVertical_bias="0.0"/>

    <EditText
        android:id="@+id/projKeyEdit3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="New Project Keywords 3"
        app:layout_constraintBottom_toTopOf="@+id/submit_add"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/projKeyEdit2"
        app:layout_constraintVertical_bias="0.0"/>

    <CheckBox
        android:id="@+id/favorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Is This Project Your Favorite?"
        android:onClick="onCheckboxClicked"
        app:layout_constraintBottom_toTopOf="@+id/submit_add"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/projKeyEdit3"
        app:layout_constraintVertical_bias="0.0"/>

    <Button
        android:id="@+id/submit_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="submit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/cancel_add"
        app:layout_constraintBottom_toBottomOf="parent" />

    <Button
        android:id="@+id/cancel_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="cancel"
        app:layout_constraintStart_toEndOf="@+id/submit_add"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/submit_add"
        app:layout_constraintBottom_toBottomOf="@+id/submit_add" />


</androidx.constraintlayout.widget.ConstraintLayout>